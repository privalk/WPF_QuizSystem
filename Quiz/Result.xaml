<Window x:Class="Quiz.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz"
        mc:Ignorable="d"
        Title="Result" Height="450" Width="800">
    <Grid>
        <TextBlock Text="得分：" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-50,0,0,0" FontSize="24"/>
        <TextBlock Text="{Binding Sum}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,0,0,0" FontSize="24"/>
        <TextBlock Text="{Binding Time}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="-60,100,0,0"/>
        <TextBlock Text="秒后返回" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="40,100,0,0"/>
        <Button Content="重新挑战" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="200,0,0,100" Click="Retry" FontSize="16" Height="40" />
        <Button Content="返回" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="-200,0,0,100" Click="Back" FontSize="18" Height="40" Width="86"/>
    </Grid>
</Window>
